<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plusystem.mobile.cpp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UsuariosActivity"
            android:label="@string/title_activity_usuarios"/>

        <activity
            android:name=".RegistrarTransformadorActivity"
            android:label="@string/title_activity_registrar_transformadores"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".TransformadoresActivity"
            android:label="@string/title_activity_transformadores"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>